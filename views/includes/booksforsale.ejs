<% if (prods.length > 0) { %>
<div class="booksforsale">
    <div class="row mt-2">
        <div class="col text-center">
            <h3>All Books</h3>
        </div>
    </div>
    
    <div class="container">
       
            <%let count=0;%>
            <% for (let product of prods) { %>
                <%if(product.available==0){continue}%>
            <%if(count%4==0){%>
            <div class="row mt-4">
            <div class="card-deck">
            <%}%>
                <div class="card text-center mt-2">
                    <img src="/<%= product.imageUrl %>" class="card-img-top" alt="book">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.title %></h5>
                        <small>
                            <p>by <%= product.name %></p>
                        </small>
                        <p class="card-text">
                            <%= product.description %>
                        </p>
                        <small>
                            <p>Condition : <%= product.bcondition %></p>
                        </small>
                        <section class="d-flex justify-content-around">
                            <p>MRP : <strike><%= product.orignal_price %></strike></p>
                            <p>Get for &#8377 :<%= product.selling_price %> </p>
                        </section>
                        <%if(userId!=product.user_id){%>
                        <div class="row">
                            <div class="col">
                                <a href="#" class="btn btn-lg border-success"><span class="fa fa-cart-plus"></span></a>
                            </div>
                            <div class="col">
                                <a href="#" class="btn btn-lg border-success"><span class="fa fa-heart"></span></a>
                            </div>
                        </div>
                        <%}%>
                    </div>
                </div>
            <%if((count+1)%4==0&&(count>2)){%>
                </div>
                </div>
            <%}%>
            <%count+=1%>
        <% } %>
        <%if((count+1)%4!=0&&count>0){%>
            </div>
            </div>
        <%}%>
    
    <% } else { %>
        <h1>No Products Found!</h1>
    <% } %>
    <!-- // -->

    <div class="container-fluid mt-4">
        <div class="row-footer text-center">
            <div class="col-12 col-md-12">
                <p class="lead muted">Â© Boook Store 2021</p>
            </div>
        </div>
    </div>
</div>